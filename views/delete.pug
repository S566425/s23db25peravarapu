extends layout
block content
  h1= title
  if (toShow == null)
    h2 No instance to delete
  else
    - let organisationid = toShow._id
    - let organisationcourse = toShow.course
    - let organisationfaculty = toShow.faculty
    - let organisationsection = toShow.section
    - let actionid = "/resource/organisation/" + organisationid
 
    script.
      let actionid = "#{actionid}"
 
    div
      div.row
        div(class='organisationAttr mr-3') organisation ID is:
          div #{organisationid}
      div.row
        div(class='organisationAttr mr-3') organisation course is:
          div #{organisationcourse}
      div.row
        div(class='organisationAttr mr-3') organisation faculty is:
          div #{organisationfaculty}
      div.row
        div(class='organisationAttr mr-3') organisation section is:
          div #{organisationsection}
      button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
      button(class="btn btn-secondary m-2" onclick="cancel()") Cancel
 
    script.
      function cancel() {
        // Go back to the home page for the costume collection
        window.location.href='/organisation'
      }
 
    script.
      function deleteOnid() {
        console.log("starting delete");
        // delete first
        fetch(actionid, {
          method: 'DELETE' // Don't need a body for the delete
        }).then((resp) => {
          return resp.json(); // or resp.text() or whatever the server sends
        }).then((body) => {
          alert("Delete succeeded");
          window.location.href='/organisation';
          // TODO handle body
        }).catch((error) => {
          // TODO handle error
          alert("Delete failed " + error );
        });
      }